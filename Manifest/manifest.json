    "name": "Xylos N.V.",
    "websiteUrl": "https://xylos.com",
    "privacyUrl": "https://www.xylos.com/nl/privacy",
    "termsOfUseUrl": "https://xylos.com"
  },
  "icons": {
    "color": "logo.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Xylos Matchmaker"
  },
  "description": {
    "short": "The Xylos Matchmaker bot randomly pairs colleagues to build team unity.",
